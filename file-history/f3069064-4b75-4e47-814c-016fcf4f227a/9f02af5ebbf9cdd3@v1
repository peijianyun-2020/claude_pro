"""
配置文件
"""
import os
from pathlib import Path

# 项目根目录
BASE_DIR = Path(__file__).parent

# 存储配置
OUTPUT_DIR = BASE_DIR / "wechat_articles"
IMAGE_DIR = "images"
DOWNLOAD_IMAGES = True

# 文件命名格式
FILE_FORMAT = "{date}_{title}.md"  # 2026-01-04_标题.md

# Chrome DevTools配置
PAGE_LOAD_TIMEOUT = 30000  # 页面加载超时（毫秒）

# 图片下载配置
IMAGE_TIMEOUT = 10  # 图片下载超时（秒）
MAX_RETRIES = 3  # 最大重试次数

# 批量采集配置
DELAY_BETWEEN_REQUESTS = 2  # 请求间隔（秒）
MAX_CONCURRENT_DOWNLOADS = 5  # 最大并发下载数

# 日志配置
LOG_LEVEL = "INFO"  # DEBUG, INFO, WARNING, ERROR
LOG_FILE = BASE_DIR / "collector.log"

# 创建必要的目录
OUTPUT_DIR.mkdir(parents=True, exist_ok=True)
(OUTPUT_DIR / IMAGE_DIR).mkdir(parents=True, exist_ok=True)
